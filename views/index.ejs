                        <a href="#">Programming Tips</a>
                        <a href="#">Portfolio Building</a>
                    </div>

                </div>

            </div>


    </section>
    </div>
    </section>
    <!-- posts section ends -->



    </div>

    </section>


    <!-- contact section starts  -->

    <section class="contact" id="contact">

        <form action="">
            <h3>contact me</h3>
            <div class="inputBox">
                <input type="text" placeholder="full name">
                <input type="email" placeholder="email">
            </div>
            <div class="inputBox">
                <input type="mobile number" placeholder="number">
                <input type="text" placeholder="subject..">
            </div>
            <textarea name="" placeholder="message...." id="" cols="30" rows="10"></textarea>
            <input type="submit" value="send message" class="btn">
        </form>

    </section>

    <!-- contact section ends -->


    <!-- Footer Section -->
    <section class="footer">
        <div class="follow">
            <a href="https://github.com/devkuldeep" class="fab fa-github" target="_blank"></a>
            <a href="https://www.linkedin.com/in/kuldeep-patel-09a0041a7/" class="fab fa-linkedin" target="_blank"></a>
            <a href="https://x.com/KuldeepDev_" class="fa-brands fa-x-twitter" target="_blank"></a>
            <a href="https://kuldeepdev.vercel.app/" class="fa-brands fa-chrome" target="_blank"></a>
        </div>
        <div class="credit">Developed by <span>Kuldeep Dev</span> | ❤️</div>
    </section>

    <script src="/js/script.js"></script>
</body>

</html>